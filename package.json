  "dependencies": {},
  "devDependencies": {
    "caniuse-db": "^1.0.30000699",
    "fs-extra": "^3.0.1",
    "ghooks": "^1.3.2",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-convert-encoding": "^1.0.0",
    "gulp-htmlhint": "^0.3.1",
    "gulp-replace": "^0.6.1",
    "gulp-util": "^3.0.8",
    "husky": "^0.14.3",
    "iconv-lite": "^0.4.18",
    "jsdom": "^11.1.0",
